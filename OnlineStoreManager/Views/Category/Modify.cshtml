@using OnlineStoreManager.Infracstructure;
@using OnlineStoreManager.Database.Models;
@using System.ComponentModel.DataAnnotations;
@using OnlineStoreManager.Repository;
@model OnlineStoreManager.Models.ViewModels.CategoryModifyViewModel
@{ Layout = null; }
@{
   Category formValues = new Category();
   if (Model.Action == CRUD.Update)
   {
      formValues.AssignProperties(Model.Category);
   }
}

<div class="form-container" style="background-color:#fafafa">
   @if (formValues.Id != null)
   {
      <div class="field-set">
         <div class="field">
            <label> Mã danh mục: </label>
            <input type="text" disabled value="@formValues.Id" name="id" />
         </div>
      </div>
   }
   <div class="field-set">
      <div class="field ">
         <label> Tên danh mục: </label>
         <input type="text" name="name" value="@formValues.Name" />
         <span class="validation" for="Category.Name"></span>
      </div>
   </div>

   <div class="field-set">
      <div class="field">
         <label> Mô tả: </label>
         <textarea type="number" rows="8" name="description">@formValues.Description</textarea>
      </div>
   </div>
</div>


