@using OnlineStoreManager.Infracstructure;
@model OnlineStoreManager.Models.ViewModels.ProductIndexViewModel;
@inject IPageMaster PageMaster;


<div id="revenue-report">
   <style>
      .summary_card {
         padding: 1rem;
         /* background-color: white; */
         /* box-shadow: 5px 5px 10px 1px rgba(199, 199, 199, 0.589); */
         /* border-radius: 5px; */
         display: inline-block;
      }

         .summary_card .icon {
            width: 64px;
            height: 64px;
            background-color: rgb(44, 44, 44);
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
         }

            .summary_card .icon img {
               width: 50%;
               height: 50%;
            }

         .summary_card .summary > * {
            margin: 7px 14px;
         }

         .summary_card .summary .label {
            font-size: 14px;
            font-weight: 600;
            opacity: 0.5;
         }

         .summary_card .summary .text {
            font-size: 20px;
            font-weight: 600;
         }
   </style>
   <div style="width: 1161px;background-color:#f5f5f5;padding: 2rem;">
      <div>
         <div style="font-weight: bold;font-size: 20px;text-transform: uppercase;
   padding:1rem;text-align: center;background-color:white">
            Báo cáo doanh thu
         </div>

         <div class="flex" style="width: 100%;box-sizing: border-box;padding: 1.25rem;
   background-color:lightgoldenrodyellow;">

            <!-- Bar chart -->
            <div style="display: block; width: 700px; height: 350px;">
               <canvas id="bar_chart" width="700" height="350" class="chartjs-render-monitor"></canvas>
            </div>

            <div class="flex_col flex-center" style="margin: auto;flex-direction: column;">

               <div class="summary_card">
                  <div class="flex flex-center">
                     <div class="icon">
                        <img src="./revenue.svg">
                     </div>

                     <div class="summary">
                        <span class="label">Doanh thu bán hàng</span>
                        <div class="text" style="color: rgb(76, 179, 226);">
                           129,000,000 VND
                        </div>
                     </div>
                  </div>
               </div>

               <div class="summary_card">
                  <div class="flex flex-center">
                     <div class="icon">
                        <img src="./spending.svg">
                     </div>

                     <div class="summary">
                        <span class="label">Chi tiêu</span>
                        <div class="text" style="color:rgb(253, 101, 101)">
                           -80,000,000 VND
                        </div>
                     </div>
                  </div>
               </div>

               <div class="summary_card">
                  <div class="flex flex-center">
                     <div class="icon">
                        <img src="./profit.svg">
                     </div>

                     <div class="summary">
                        <span class="label">Lợi nhuận bán hàng</span>
                        <div class="text" style="color: rgb(88, 216, 137);">
                           49,000,000 VND
                        </div>
                     </div>
                  </div>
               </div>

            </div>

            <!-- Circle Chart -->

         </div>
      </div>

      <div>
         <div style="font-weight: bold;font-size: 20px;text-transform: uppercase;
   padding:1rem;text-align: center;background-color:white">
            Doanh số bán hàng theo sản phẩm
         </div>

         <div class="flex" style="width: 100%;box-sizing: border-box;padding: 1.25rem;
   background-color:lightgoldenrodyellow;">

            <!-- Bar chart -->
            <div style="display: block; width: 600px; height: 350px;">
               <canvas id="pie_chart" width="600" height="350" class="chartjs-render-monitor"></canvas>
            </div>

            <div class="flex_col flex-center" style="margin: auto;flex-direction: column;">


            </div>
         </div>
      </div>

   </div>
</div>

<script hide>
   var html = htmlToString('#revenue-report', true);
   $().w2layout({
      name: '_revenue_report',
      panels: [
         {
            type: 'main', content: html, style: panelStyle
         },
      ],
      onRender: function (e) {
         e.onComplete = function () {
            REPORT_PAGE.renderBarChart();
            REPORT_PAGE.renderPieChart();
         }
      }
   });

   w2ui['_main_content'].content('main', w2ui['_revenue_report']);
</script>


@section ViewScripts {
   <script hide src="~/lib/chartjs/Chart.min.js"></script>
   <script hide src="~/js/Views/Report/Index.js"></script>
}